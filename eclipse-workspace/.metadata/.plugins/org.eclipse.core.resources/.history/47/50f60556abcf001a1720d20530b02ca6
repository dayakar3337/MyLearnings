	@Then("^I enter the required details$")
	public void EnterDetails() {
	    
	}

	@Then("^I click on Submit button$")
	public void ClickOnSubmitBtn() {
	    

	}*/

	
	
	
	
	
	
	
	
	
	
	
	
	
}
